/* Update Report by Jean-Marie Straetemans*/
<div>
	<table>
	<thead>
		<tr>
			<th>Still</th>			
			<th>Name</th>
			<th>Age</th>
			<th>Birthday</th>
			<th>*Birthyear</th>>
		</tr>
	</thead>
		<tbody>
		{% for p in people.slice(0,limit) %}
		
		<tr>
			
		{% if p.days == 0 %}
			<td>Today</td>
		{% else %}
			<td>{{p.days}}</td>
		{% endif %}
			<td>{{p.name}}</td>
			<td>{{p.age}}</td>
			<td>{{p.date}}</td>
			<td>*{{p.birthyear}}</td>
		</tr>	
		{% endfor %}
		</tbody>
	</table>
</div>
